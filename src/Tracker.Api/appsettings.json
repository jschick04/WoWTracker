    "ConnectionStrings": {
        "AuthDb": "Secrets",
        "TrackerDb": "Secrets"
    },
    "CacheSettings": {
        "Enabled": "false",
        "ConnectionString": "Secrets"
    },
    "JwtSettings": {
        "Secret": "Secrets",
        "TokenLifetimeMinutes": "15",
        "RefreshTokenLifetimeDays": "2",
        "RefreshTokenHistoryDays": "14"
    },
    "EmailSettings": {
        "ApiKey": "Secrets",
        "From": "Secrets"
    },
    "HangfireSettings": {
        "Username": "Secrets",
        "Password": "Secrets"
    },
    "SwaggerSettings": {
        "JsonRoute": "swagger/{documentName}/swagger.json",
        "Description": "WoW Tracker API",
        "UiEndpoint": "v1/swagger.json"
    },
    "Serilog": {
        "MinimumLevel": {
            "Default": "Information",
            "Override": {
                "Microsoft": "Error",
                "Microsoft.Hosting.Lifetime": "Information",
                "System": "Information",
                "Hangfire": "Warning"
            }
        },
        "WriteTo": [
            {
                "Name": "Console",
                "Args": {
                    "outputTemplate": "{Timestamp} [{Level}] {Message}{NewLine:1}"
                }
            }
