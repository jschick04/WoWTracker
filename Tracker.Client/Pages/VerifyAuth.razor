@page "/verifyauth"

<div class="mb-3" style="font-size: 1.4rem">VerifyAuth</div>

<div class="mb-3" style="font-size: 1.2rem">Username: @CurrentUsername</div>

<hr style="width: 25%; text-align: left" />
<div class="my-2" style="font-size: 1.1rem">Group 1</div>
<hr style="width: 25%; text-align: left" />

@if (_isLoading) {
    <LoadingText />
} else {
    @foreach (var character in Characters1) {
        <div class="mb-2">
            <div>Name: @character.Name</div>
            <div>Class: @character.Class</div>
            <div>Primary Profession: @(GetProfession(character.FirstProfession))</div>
            <div>Secondary Profession: @(GetProfession(character.SecondProfession))</div>
            @if (character.HasCooking) {
                <div>Can Cook</div>
            }
        </div>
    }
}

<hr style="width: 25%; text-align: left" />
<div class="my-2" style="font-size: 1.1rem">Group 2</div>
<hr style="width: 25%; text-align: left" />

@if (_isLoading) {
    <LoadingText />
} else {
    @foreach (var character in Characters2) {
        <div class="mb-2">
            <div>Name: @character.Name</div>
            <div>Class: @character.Class</div>
            <div>Primary Profession: @(GetProfession(character.FirstProfession))</div>
            <div>Secondary Profession: @(GetProfession(character.SecondProfession))</div>
            @if (character.HasCooking) {
                <div>Can Cook</div>
            }
        </div>
    }
}