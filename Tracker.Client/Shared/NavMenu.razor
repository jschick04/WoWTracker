<MudNavMenu Class="mud-width-full">

    <MudText Class="d-flex justify-center">
        <MudLink Typo="Typo.h5" Href="/verifyauth">@Welcome</MudLink>
    </MudText>

    <MudDivider />
    
    <MudNavLink Href="/" Icon="@Icons.Filled.Home">Home</MudNavLink>
    <MudNavGroup Title="Characters" Icon="@Icons.Filled.People" Expanded="true">
        @if (_isLoading) {
            <MudText Align="Align.Center">Loading...</MudText>
        } else {
            @foreach (var character in Characters) {
                <MudNavLink @onclick="@(() => Delete(character.Id, character.Name))" Icon="@Icons.Filled.PeopleOutline">@character.Name</MudNavLink>
            }
        }
        <MudNavLink Href="/character/create" Icon="@Icons.Filled.Add" IconColor="Color.Primary">Create Character</MudNavLink>
    </MudNavGroup>

</MudNavMenu>