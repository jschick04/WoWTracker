{
    "Serilog": {
        "MinimumLevel": {
            "Default": "Information",
            "Override": {
                "Microsoft": "Error",
                "Microsoft.Hosting.Lifetime": "Information",
                "System": "Information",
                "Hangfire": "Warning"
            }
        },
        "WriteTo": [
            {
                "Name": "Console",
                "Args": {
                    "outputTemplate": "{Timestamp} [{Level}] {Message}{NewLine:1}"
                }
            }
        ],
        "Properties": {
            "Application": "Tracker.Client.Core"
        }
    },
    "AllowedHosts": "*"
}